{
  "compilerOptions": {
    "jsx": "react",
    "target": "es6",   
     "module": "commonjs",  
    "lib": [
      "dom",
      "es6",
      "dom.iterable",
      "scripthost"
    ],                        
    "outDir": "./dist",        
    "rootDir": "./src",       
    "removeComments": true,    
    "noEmitOnError": true,
    "strict": true,            
    "sourceMap": false,        
    "noUnusedLocals": true,     
    "noUnusedParameters": true, 
    "noImplicitReturns": true,  
    "esModuleInterop": true  ,
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}